<Window x:Class="IDE_AR.MessageBoxPersonalizado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        Style="{StaticResource ventanaPopUp}">
    <Border CornerRadius="30" Background="{StaticResource BarraLateralDerechaBrush}" 
            BorderThickness="4"
            BorderBrush="{StaticResource BarraLateralIzquierdaBrush}">       
        <StackPanel>
            <TextBlock Style="{StaticResource labelVentanasAgregar}" Text="{Binding Texto}"  Name="txtTexto" Margin="20"></TextBlock>
            <Button Style="{StaticResource botonRedondeadoAceptar}"
                    Click="btnAceptar_Click"></Button>
        </StackPanel>
    </Border>
</Window>
